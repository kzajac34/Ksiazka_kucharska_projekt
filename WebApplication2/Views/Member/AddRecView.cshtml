@model WebApplication2.Models.Recipes

@{
    ViewBag.Title = "AddRecView";
    IEnumerable<int> trudnosc = Enumerable.Range(1, 10);
}

<h2>Dodaj przepis</h2>

@using (Html.BeginForm("AddRecView", "member", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Wypełnij poniższe rubryki aby dodać przepis</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="text-center" >
            <h2>
                @Html.Label("Tytuł: ")
            </h2>            
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="form-group">

                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control input-lg ", style = "width: 100%; max-width: 100%; font:bold; font:xx-large;" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <h1></h1>

        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    @Html.Label("Kategoria: ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.cateogry_ID, new SelectList((IEnumerable<WebApplication2.Models.Category>)ViewBag.Category,"category_ID", "category_name"),"Wybierz kategorię", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.cateogry_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="col-md-6 col-xs-12">
                <div class="form-group" >
                    @Html.Label("Poziom trudności:", htmlAttributes: new { @class = "control-label col-md-4 " })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.difficulty,new SelectList(trudnosc),"Wybierz poziom trudności 1-10", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.difficulty, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    @Html.Label(("Czas przygotowania:"), htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8 text-center" >
                        @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <div class="form-group">
                    @Html.Label(("Zdjęcie:"), htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <input type="file" id="image1" name="image1" class="form-control" />
                    </div>
                </div>

            </div>
        </div>

        <div class="form-group">
            @Html.Label("Treść przepisu:")
            <div >
                @Html.TextAreaFor(model => model.recipe_content, 18, 40, htmlAttributes: new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.recipe_content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Dodaj przepis" class="btn btn-default"  />
            </div>
        </div>
    </div>
}

@model WebApplication2.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzanie kontem";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Zmieniaj ustawienia swojego konta i sprawdzaj starystyki.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Twoje hasło:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Utwórz hasło", "SetPassword")
            }
            ]
        </dd>
       
        
    </dl>
</div>
